<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_IT_Preparation</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Custom styles for the navigation bar */
        .navbar {
            background-color: #007bff !important; /* Bootstrap primary color */
            color: white;
            margin-bottom: 0; /* Remove any bottom margin */
        }

            .navbar .nav-link {
                color: white; /* Change navbar text color to white */
            }

                .navbar .nav-link:hover {
                    color: #ffd700; /* Gold color on hover */
                }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem; /* Increase brand font size */
        }

        /* Custom styles for the sidebar */
        .sidebar {
            background-color: #007bff; /* Match sidebar background color with navbar */
            color: white; /* Sidebar text color */
            margin-top: -1px; /* Remove gap by aligning sidebar with navbar */
            padding: 0; /* Ensure no padding */
        }

            .sidebar .nav-link {
                color: white; /* Change sidebar text color to white */
            }

                .sidebar .nav-link:hover {
                    color: #ffd700; /* Gold color on hover */
                }

                .sidebar .nav-link.active {
                    font-weight: bold; /* Highlight active link */
                }

        .main-content {
            padding-top: 0; /* Remove padding at the top of the main content */
        }

        /* Additional reset styles to ensure no gaps */
        body {
            margin: 0; /* Remove body margin */
            padding: 0; /* Remove body padding */
        }

        .container-fluid {
            padding: 0; /* Remove padding */
        }

        .row {
            margin: 0; /* Remove margin from row */
        }
    </style>
</head>
<body>
    <!-- Top Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-0">
            <!-- Remove bottom margin -->
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Online IT Job Preparation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="nav-link text-white">Welcome, @User.Identity.Name</span>
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Log Out</a> <!-- Log Out Link -->
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Container with Sidebar -->
    <div class="container-fluid">
        <!-- Remove container padding -->
        <div class="row">
            <!-- Remove row margin -->
            <!-- Sidebar Section -->
            <aside class="col-md-3 sidebar">
                <div class="p-3">
                    <!-- Padding for sidebar content -->
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="prepGuidelineLink">
                                <i class="fas fa-book"></i> Preparation Guideline
                            </a>
                        </li>
                        <div id="subMenu" style="display: none; padding-left: 20px;"> <!-- Initially hidden sub-menu with padding -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Departmental", "User")">
                                <i class="fas fa-university"></i> Departmental
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("NonDepartmental", "User")">
                                <i class="fas fa-users"></i> Non-Departmental
                            </a>
                        </li>
                </div>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="Account">
                        <i class="fas fa-user"></i> Account
                    </a>
                </li>
                </ul>
        </div>
        </aside>

        <!-- Main Content Section -->
        <div class="col-md-9 main-content">
            <main role="main">
                    @RenderBody() <!-- Content for individual pages will be rendered here -->
            </main>
        </div>
    </div>
    </div>

   @*  <!-- Footer Section -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2024 - Online_IT_Preparation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <!-- Scripts -->
    <script>
        $(document).ready(function () {
            // Toggle the sub-menu when "Preparation Guideline" is clicked
            $('#prepGuidelineLink').click(function (e) {
                e.preventDefault(); // Prevent default action (if necessary)
                $('#subMenu').toggle(); // Show or hide the sub-menu
            });
        });
    </script>
</body>
</html>
